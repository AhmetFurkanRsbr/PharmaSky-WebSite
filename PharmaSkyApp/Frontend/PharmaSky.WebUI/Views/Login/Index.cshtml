    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // JSON serialize ile JS'e düzgün string olarak göm
            const message = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.Message ?? ""));
            const type    = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.MessageType ?? "info"));

            if (message) {
                Swal.fire({
                    text: message,
                    icon: type,
                    confirmButtonText: 'Tamam',
                    timer: 3000,
                    timerProgressBar: true
                });
            }
        });
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const fixedHeight = '500px';
            const carouselInner = document.querySelector('.carousel-inner');
            const carouselItems = document.querySelectorAll('.carousel-item');

            const images = document.querySelectorAll('.carousel-item img');
            let loadedImages = 0;
            const totalImages = images.length;

            images.forEach(img => {
                if (img.complete) {
                    loadedImages++;
                } else {
                    img.addEventListener('load', () => {
                        loadedImages++;
                        if (loadedImages === totalImages) {
                            applyFixedDimensions();
                        }
                    });
                    img.addEventListener('error', () => {
                        loadedImages++;
                        if (loadedImages === totalImages) {
                            applyFixedDimensions();
                        }
                    });
                }
            });

            if (loadedImages === totalImages) {
                applyFixedDimensions();
            }

            function applyFixedDimensions() {
                if (carouselInner) {
                    carouselInner.style.height = fixedHeight;
                }
                if (carouselItems) {
                    carouselItems.forEach(item => {
                        item.style.height = fixedHeight;
                    });
                }
            }
        });

        $('#carouselExampleIndicators').on('slide.bs.carousel', function () {
            const fixedHeight = '500px';
            const carouselInner = document.querySelector('.carousel-inner');
            if (carouselInner) {
                carouselInner.style.height = fixedHeight;
            }
        });
    </script>

    <!--Slidder Resim geçişleri 2 saniye olarak ayarlandı -->
    <script>
        $(window).on('load', function() {
            $('#carouselExampleIndicators').carousel({
                interval: 2000,
                ride: 'carousel'
            });
        });
    </script>


